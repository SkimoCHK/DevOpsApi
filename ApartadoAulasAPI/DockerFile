# Imagen base para runtime
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080

# Imagen para build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["ApartadoAulasAPI.csproj", "./"]
RUN dotnet restore "ApartadoAulasAPI.csproj"
COPY . .
RUN dotnet build "ApartadoAulasAPI.csproj" -c Release -o /app/build

# Publicar la aplicación
FROM build AS publish
RUN dotnet publish "ApartadoAulasAPI.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Imagen final
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ApartadoAulasAPI.dll"]
```

**.dockerignore** (en la raíz):
```
bin/
obj/
.vs/
.vscode/
*.user
*.suo
.git/
.gitignore